
{% if section.settings.enable_full_banner %}
    

{% if section.settings.video_url !=blank %}
   
    <div class="page-width section--fullwidth-banner">
      <a href="{{ section.settings.link}}">
    <video autoplay muted loop playsinline class="section--fullwidth-banner">
    <source src="{{ section.settings.video_url }}" type="video/mp4">
    </video>
     </a>
</div>
    {% elsif section.settings.desktop_img != blank %}
<div class="page-width section--fullwidth-banner">
<a href="{{section.settings.link}}">
  <img src="{{section.settings.desktop_img | img_url: 'master'}}" alt="{{media_preview_image.alt}}">
</a>
</div>
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100 section--fullwidth-banner'}}
{% endif %}
   




    {% if section.settings.mobile_video_url !=blank %}
    <div>
      <a href="{{ section.settings.link }}">
      <video autoplay muted loop playsinline class="section--fullwidth-mobile  py-2 px-3" id="section--fullwidth-mobile">
    <source src="{{ section.settings.mobile_video_url}}" type="video/mp4">
    </video>
    
    </a>
    </div>

    {% elsif section.settings.mobile_image !=blank %}
      
    <a href="{{ section.settings.link}}">
        <img src="{{ section.settings.mobile_image | img_url: 'master' }}" alt="{{ media.preview_image.alt }}" class="section--fullwidth-mobile  py-2 px-3" id="section--fullwidth-mobile">
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100 section--fullwidth-mobile' }}
    {% endif %}
    

    

   
    

     
  
      
    
 
  <style>
    .section--fullwidth-banner{
      position: relative;
      display: block;
      align-items: center;
      width: 100%;        
      overflow: visible;
      text-align: center;
      background-size: cover;
      background-repeat: no-repeat;
      background-position: 50% 50%;
  
    }

 


    .section--fullwidth-banner, .section--fullwidth-mobile .title{
    
      width: 100%;
      font-weight: 900;
      font-size: 170%;
 
    }
    .section--fullwidth-banner, .section--fullwidth-mobile .title span{
      display: inline-block;
      background: rgba(255,255,255,0.8);
      color: #000;
    }

    
    .section--fullwidth-banner img{
      position: absolute;
      z-index: 0;
      top: 0;
      left: 0;
      right: 0;
      display: block;
      padding-bottom: 10px;
    } 
    
    .section--fullwidth-mobile{
        display: none;
    }
   
@media screen and (max-width:1200px) {
    .section--fullwidth-banner{
        display: none;

    }

    .section--fullwidth-mobile{
        display: inline-block;
       
    }


}
 
  </style>
 
 
{% endif %}
 
{% schema %}
  {
    "name": "Full-width Banner",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_full_banner",
        "label": "Enable Banner",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "desktop_img",
        "label": "Desktop Image"
      },
      {
        "type": "image_picker",
        "id": "mobile_image",
        "label": "Mobile Image"
        },
        {
        "type": "text",
        "id": "video_url",
        "label": "Desktop Video URL"
      },
      {
        "type": "text",
        "id": "mobile_video_url",
        "label": "Mobile Video URL"
        },
      {
        "type": "number",
        "id": "img_height",
        "label": "Image height in px",
            "default": 200
      },
      {
      "type": "url",
      "id": "link",
      "label": "Banner link"
    }
    ]
  }
 
{% endschema %}
 
